{% extends 'base.html.twig' %}

{% block body %}
    <h1>Oninvoice</h1>

    <table>
        <tbody>
            <tr>
                <th>Price</th>
                <td>{{ oninvoice.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ oninvoice.quantity }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ oninvoice.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('oninvoice_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('oninvoice_edit', { 'id': oninvoice.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
