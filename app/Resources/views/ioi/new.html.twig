{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .hidden {
            display:none;
        }
        a {
            color: red;
            font-size: 25px;
            font-family: inherit;
        }
    </style>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>

    <script type="text/javascript">
        function toggler(divId) {
            $("#" + divId).toggle();
        }

    </script>


    <h1>Invoice creation</h1>

    {{ form_start(form) }}

        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}


    <a href="#" onclick="toggler('myContent');">Show Oninvoice creation</a>
    <div id="myContent" class='hidden'>

    <h1>Oninvoice creation</h1>

    {{ form_start(formOninvoice) }}

    {{ form_widget(formOninvoice) }}
    <input type="submit" value="Create" />
    {{ form_end(formOninvoice) }}

    </div>

{% endblock %}
